<div id="flash_messages">
  <% flash.each do |key, value| %>
    <%
      if key == "alert"
        klass = "default"
      elsif key == "notice" || key == "success"
        klass = "info"
      elsif key == "timedout"
        klass = " hidden"
      elsif key == "custom_message"
        klass = "success"
      else
        klass = key
      end
    %>
    <%= content_tag(:div, class: "alert alert-#{klass} alert-dismissible fade in", role: "alert") do %>
      <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true"><i class="icon icn-logout"></i></span><span class="sr-only"><%= t(:close) %></span></button>
      <% if key == "custom_message" %>
        <i class="icon icn-faq"></i>
      <% end -%>
      <%= value %>
    <% end -%>
  <% end %>
</div>