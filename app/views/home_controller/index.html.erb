<h1>My Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Status</th>
      <th>Difficulty</th>
      <th>Close data</th>
      <th>Close limit date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.status %></td>
        <td><%= task.difficulty %></td>
        <td><%= task.close_date %></td>
        <td><%= task.close_limit_date %></td>
        <td><%= link_to 'Conclude', conclude_task_path(task) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
