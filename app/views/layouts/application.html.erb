<!DOCTYPE html>
<html>
  <head>
    <title>DoInHome</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-full navbar-light bg-faded navbar-dark bg-inverse">
      <%= link_to "DoInHome", root_path, class: "navbar-brand" %>

      <ul class="nav navbar-nav">
        <li class="nav-item">
          <%= link_to root_path, class: "nav-link" do %>
              In√≠cio
          <% end -%>
        </li>
        <li class="nav-item">
          <%= link_to users_path, class: "nav-link" do %>
            <%= t(:user, scope: "activerecord.models").pluralize %>
          <% end -%>
        </li>
        <li class="nav-item">
          <%= link_to tasks_path, class: "nav-link" do %>
            <%= t(:task, scope: "activerecord.models").pluralize %>
          <% end -%>
        </li>
      </ul>
    </nav>

    <div class="row">
      <div class="col-xs-12">
        <%= render "shared/flash_messages" %>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <div class="col-xs-12">
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
